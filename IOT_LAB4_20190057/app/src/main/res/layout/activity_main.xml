<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".MainActivity">

    <!-- Contenedor para centrar todo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo del clima -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/logo_principal" />

        <!-- Título "Tele" -->
        <TextView
            android:id="@+id/tvTeleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tele"
            android:textSize="64sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="-10dp" />

        <!-- Título "Weather" -->
        <TextView
            android:id="@+id/tvWeatherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather"
            android:textSize="64sp"
            android:textColor="#DDB130"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="60dp" />

        <!-- Botón Comenzar -->
        <Button
            android:id="@+id/btnComenzar"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:text="Comenzar"
            android:textSize="28sp"
            android:textColor="#362A84"
            android:fontFamily="@font/opensans_bold"
            android:background="@drawable/btn_comenzar"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Información del creador -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_copyright"
            android:layout_marginEnd="5dp"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made By Ricardo Alvarado - 20190057"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inter_medium" />
    </LinearLayout>

</RelativeLayout>